@{
}

<h1> Sordersss </h1>
@{

    if (ViewBag.hasOrders)
    {
        for (var i = 0; i < ViewBag.orders.Count; i++)
        {
            <div>
                <div>
                    <p>Seller @ViewBag.shopNames[i]</p>
                </div>
                <div>
                    <div>
                        Product Image
                    </div>
                    <div>
                        <div>
                            @ViewBag.productNames[i]
                            Quantity: @ViewBag.productQuantities[i]
                            Unit Price:  @ViewBag.productPrices[i]
                        </div>
                        <div>Total Price: @ViewBag.totalPrices[i]</div>
                        <div>Order Status: @ViewBag.orderStatuses[i]</div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>there are no orders</p>
        }



    }
