@{
    ViewData["Title"] = "Order Status Changed";
}

@{
    {
        <div>
            <h1>Your Order Status has been Changed</h1>
            <h2>Order ID #@ViewBag.OrderID is changed from IN_PROGRESS to @ViewBag.NewOrderStatus</h2>
            <form asp-action="RedirectViewOrders" asp-controller="Customer" method="get">
                <input type="submit" value="Go back to My Orders" class="action-button"/>
            </form>
        </div>
    }
}

<style>
    h1 {
        margin-top: 2rem;
    }

    body {
        background-color: #EBEBE8;
    }

    .action-button {
        background-color: #D1E2C4;
        color: #31352E;
        border-radius: 4px;
        padding: 0 8px 0 8px;
        border: none;
    }

     .action-button:hover {
         background-color: #d6e8c9;
     }
</style>

