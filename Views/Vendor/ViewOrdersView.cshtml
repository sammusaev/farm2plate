@{
    ViewData["Title"] = "ViewOrdersView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Orders </h1>

@{ 
    var Orders = ViewBag.Orders;
    var ProductNames = ViewBag.ProductNames;
    var UserNames = ViewBag.UserNames;

    bool haveOrders = false;
    if (ViewBag.OrderCount != 0) {
        haveOrders = true;
    } 
    
    if (!haveOrders) {
        <h1> You don't have any orders yet </h1>
    }
    else {
        <center>
        <table>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Status</th>
            </tr>
        @for (int i = 0; i < ViewBag.OrderCount; i ++) {
            <tr>
                <td> @Orders[i].SOrderID </td>
                <td> @UserNames[i] </td>
                <td> @ProductNames[i] </td>
                <td> @Orders[i].ProductQuantity </td>
                <td> TOTAL AMOUNT GOES HERE </td>
                <td>
                    @if (Orders[i].SOrderStatus == 0) {
                        <select name="SOrderStatus">
                            <option value=0 selected disabled hidden>@Orders[i].SOrderStatus.ToString()</option>
                            <option value=1>@Status.IN_TRANSIT</option>
                        </select>
                        <a class="menu-button" asp-action="UpdateOrderStatus" asp-route-SOrderID="@Orders[i].SOrderID"> Update Status </a>
                    }
                    else {
                        <center> @Orders[i].SOrderStatus.ToString() </center>
                    }
                </td>
            </tr>
        }
        </table>
        </center>
    }
}

<style>

    table {
        text-align: left;
        position: center;
        border-collapse: collapse;
        background-color: #f6f6f6;
    }

    td, th {
        border: 1px solid #999;
        padding: 20px;
        text-align: center;
        font: 12px 'Helvetica Neue';
    }

    th {
        background: #DA713D;
        color: white;
        border-radius: 0;
        position: sticky;
        top: 0;
        padding: 10px;
        font: 16px 'Helvetica Neue';
        font-weight: bold;
    }

    .menu-button {
        font: 16px 'Helvetica Neue';
        text-decoration: none;
        background-color: #DA713D;
        color: #040404;
        padding: 5px 6px 5px 6px;
    }


    .menu-button:hover {
        background-color: #ED631F;
        color: #040404;
    }

    .primary {
        background-color: #000000
    }

    tfoot > tr {
        background: black;
        color: white;
    }

    tbody > tr:hover {
        background-color: #ffc107;
    }

    h1 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 50px;
        font-weight: bold;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }




    h2 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 25px;
        font-weight: bold;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }

    h3 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 18px;
        font-weight: 300;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }
</style>


