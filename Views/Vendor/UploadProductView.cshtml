@model farm2plate.Models.Product;
@{
    ViewData["Title"] = "Add New Product";
}

<h1> New Product </h1>

<form enctype="multipart/form-data" method="post" asp-action="UploadNewProduct">
    <table border="0">
        <tr>
            <th> <label asp-for="ProductName"></label> </th>
            <td> <input asp-for="ProductName" type="text" placeholder="A short & clear title" /> </td>
        </tr>

        <tr>
            <th> <label asp-for="ProductPrice"></label> </th>
            <td> <input asp-for="ProductPrice" type="number" placeholder="In RM" step=".01" /> </td>
        </tr>

        <tr>
            <th> <label asp-for="ProductQuantity"></label> </th>
            <td> <input asp-for="ProductQuantity" type="number" placeholder="In KG" step=".01" /> </td>
        </tr>

        <tr>
            <th> <label asp-for="ProductImage"></label> </th>
            <td> <input name="ProductImage" type="file" accept="image/*" value="ProductImage" /> </td>
        </tr>
        
        <tr> <th> </th> <td> <input type="submit" value="Add Product" /> </td></tr>
    </table>
</form>

<style>

        h1 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 50px;
        font-weight: bold;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }




    h2 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 25px;
        font-weight: bold;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }

    h3 {
        color: #111;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 18px;
        font-weight: 300;
        letter-spacing: -1px;
        line-height: 1;
        text-align: center;
    }
</style>