@model farm2plate.Models.Product;

@{
    ViewData["Title"] = "EditProduct";
}


<h1> Edit - @Model.ProductName </h1>

<form enctype="multipart/form-data" method="post" asp-action="EditProduct">
    <table border="0">
        <tr>
            <th> <label asp-for="ProductName"></label> </th>
            <td> <input asp-for="ProductName" type="text" placeholder="A short & clear title" /> </td>
        </tr>

        <tr>
            <th> <label asp-for="ProductPrice"></label> </th>
            <td> <input asp-for="ProductPrice" type="number" placeholder="In RM" step=".01" /> </td>
        </tr>

        <tr>
            <th> <label asp-for="ProductQuantity"></label> </th>
            <td> <input asp-for="ProductQuantity" type="number" placeholder="In KG" step=".01" /> </td>
        </tr>
        <input type="hidden" name="ProductID" value="@Model.ProductID">  
        <tr>
            <th> <input type="button" value="Discard Changes" />  </th>
            <td> <input type="submit" value="Save Changes" /> </td>
        </tr>
    </table>
</form>
